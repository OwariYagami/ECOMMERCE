                    </RelativeLayout>

                    <EditText
                        android:id="@+id/et_url_image3"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_toEndOf="@+id/rl_7"
                        android:layout_toRightOf="@id/rl_7"
                        android:background="@null"
                        android:fontFamily="@font/outfit_semibld"
                        android:hint="Url Image"
                        android:inputType="text"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"></EditText>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save_produk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_btn_login"
                android:fontFamily="@font/outfit_bold"
