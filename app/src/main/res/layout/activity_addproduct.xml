                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_email"></ImageView>
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/et_url_image2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_toEndOf="@+id/rl_6"
                        android:layout_toRightOf="@id/rl_6"
                        android:background="@null"
                        android:fontFamily="@font/outfit_semibld"
                        android:hint="Url Image"
                        android:inputType="text"
                        android:padding="@dimen/_5sdp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_secondary"></EditText>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
